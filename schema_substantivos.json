{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema de uma base de dados de substantivos no idioma alemão.",  
  "versao": "1.5",
  "$comment": "v1.5 acrescentou transcrição fonética do plural do substantivo e alterou a ordem dos campos de um item substantivo.",
  "type": "object",
  "required": [
    "substantivos"
  ],
  "properties": {
    "substantivos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "nome",
          "transcricao_ipa_singular",
          "genero",
          "plural",
          "transcricao_ipa_plural",
          "traducao",
          "particularidades"
        ],
        "properties": {
          "nome": {
            "type": "string",
            "minLength": 1
          },
          "transcricao_ipa_singular": {
            "type": "string",
            "minLength": 1
          },
          "genero": {
            "type": "string",
            "enum": [
              "Masculino",
              "Feminino",
              "Neutro"
            ]
          },
          "plural": {
            "type": "string",
            "minLength": 1
          },
          "transcricao_ipa_plural": {
            "type": "string",
            "minLength": 1
          },
          "traducao": {
            "type": "string",
            "minLength": 1
          },
          "particularidades": {
            "type": [
              "object",
              "null"
            ]
          }
        }
      }
    }
  }
}
